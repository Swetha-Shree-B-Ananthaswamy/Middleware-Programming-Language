extends baseTemplate

block content
    
    main.main
      .card-container
        .card
          .card__header
            .card__details
                h4.card__sub-heading Sign Up
                p.ard__text Please enter the following Details
                .card__data
                form(action='/api/v1/registerUser', method='post')
                    label(for="fname") First Name: 
                    input(type='text' id='fname' name='fname')
                    label(for="lname") Last Name: 
                    input(type='text' id='lname' name='lname')  
                    label(for='email') Email:
                    input(type='text' id='email' name='email')
                    label(for='password') Password:
                    input(type='password' id='password' name='password')
                    label(for='cpassword') Confirm Password:
                    input(type='password' id='cpassword' name='cpassword')
                    label(for='submit')
                    input.card__sub-heading( type='submit' value='Register User')

                p.ard__text 
                b Have An Account? 
                a(href="/login") Login 