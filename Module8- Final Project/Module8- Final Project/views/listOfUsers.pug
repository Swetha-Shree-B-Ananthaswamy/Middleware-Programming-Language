extends baseTemplate

block content

        h3.heading-primary
            span  User Details

        div
            table.table-header
                thead 
                    tr 
                      th(scope="col") #
                      th(scope="col") First Name
                      th(scope="col") Last Name
                      th(scope="col") Email
                      th(scope="col") Date

                tbody
                    - var users = users 
                    each user , i in users
                        tr.table-secondary
                            th(scope="row") #{i}
                                td #{user.fname}
                                td #{ user.lname}
                                td #{user.email}
                                td #{user.date}
                            
                    

