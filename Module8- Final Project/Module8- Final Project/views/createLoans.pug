extends baseTemplate

block content
    
    main.main
      .card-container
        .card
          .card__header
            .card__details
                h4.card__sub-heading Apply for Loan 
                p.ard__text Please enter the following Details
                .card__data
                
                form(action='/api/v1/applyForLoan', method='post')
                    label(for="LOANTYPE") LOAN TYPE: 
                    input(type='text' id='LOANTYPE' name='LOANTYPE')
                    label(for="LOANNUMBER") LOAN NUMBER: 
                    input(type='text' id='LOANNUMBER' name='LOANNUMBER')  
                    label(for='AMOUNT') AMOUNT:
                    input(type='text' id='AMOUNT' name='AMOUNT')
                    label(for='INTERESTRATE') INTEREST RATE:
                    input(type='text' id='INTERESTRATE' name='INTERESTRATE')
                    label(for='LOANTERM') LOAN TERM:
                    input(type='text' id='LOANTERM' name='LOANTERM')
                    label(for='submit')
                    input.card__sub-heading( type='submit' value='Apply For Loan')